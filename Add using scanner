import java.util.Scanner;
   class  Add
   {
           public  static void main(String args[])
           {
              Scanner s = new Scanner(System.in);
              System.out.println("enter the value of a ");
              int  a = s.nextInt();
              System.out.println("enter the values of b");
             int  b = s.nextInt();
             int  c = a+b;
             System.out.println("sum is : "+c);
          }
  }
